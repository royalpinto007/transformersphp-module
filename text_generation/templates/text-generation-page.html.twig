<div class="text-generation-container">
    <form action="{{ path('<current>') }}" method="get">
        <div>
            <label for="prompt">{{ 'Enter your prompt:'|t }}</label>
            <textarea id="prompt" name="prompt" rows="4" cols="50">{{ prompt }}</textarea>
        </div>
        <div>
            <button type="submit">{{ 'Generate Text'|t }}</button>
        </div>
    </form>

    {% if generated_text %}
        <div class="generated-text">
            <h2>{{ 'Generated Text'|t }}</h2>
            <p>{{ generated_text }}</p>
        </div>
    {% endif %}
</div>